{
  "manifest_version": 2,
  "name": "YaPlay",
  "author": "Pave Goncharov",
  "description": "Возможность вывести кнопку на панель для остановки и возобновления воспроизведения музыки (для яндекс музыки) не переключаясь на вкладку. Так же при двойном нажатии переключение на следующий трек. При наведении на кнопку отображение песни-группы.",
  "version": "1.3.1",
  "icons": {
    "64": "icons/play_64.png"
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "*://music.yandex.ru/*"
      ],
      "js": [
        "yamusic.js"
      ]
    }
  ],
  "browser_action": {
    "default_icon": {
      "64": "icons/play_64.png"
    },
    "default_title": "YaPlay?"
  },
  "commands": {
    "play": {
      "suggested_key": {
        "default": "Alt+P"
      },
      "description": "play/stop"
    }
  },
  "applications": {
    "gecko": {
      "id": "hacpatb@inbox.ru"
    }
  },
  "permissions": [
    "notifications",
    "tabs",
    "contextMenus",
    "activeTab",
    "<all_urls>"
  ]
}